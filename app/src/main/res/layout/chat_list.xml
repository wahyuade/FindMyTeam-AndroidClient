<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:id="@+id/chat"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:id="@+id/gambar_kiri"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_marginLeft="5dp"
                android:layout_height="40dp"
                android:visibility="gone"
                android:id="@+id/img_kiri"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:paddingRight="5dp"
                android:visibility="gone"
                android:id="@+id/chat_detail_kiri"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:id="@+id/user_nama_kiri"/>
                <com.github.curioustechizen.ago.RelativeTimeTextView
                    android:layout_width="wrap_content"
                    android:id="@+id/time_sent_kiri"
                    android:textSize="10sp"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:paddingLeft="5dp"
                android:visibility="gone"
                android:id="@+id/chat_detail_kanan"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:id="@+id/user_nama_kanan"/>
                <com.github.curioustechizen.ago.RelativeTimeTextView
                    android:layout_width="wrap_content"
                    android:id="@+id/time_sent_kanan"
                    android:textSize="10sp"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <me.himanshusoni.chatmessageview.ChatMessageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/isi_chat"
                app:cmv_backgroundColor="#88BABABA"
                app:cmv_backgroundColorPressed="#FFBABABA"
                app:cmv_cornerRadius="3dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:maxWidth="224dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/message"/>
            </me.himanshusoni.chatmessageview.ChatMessageView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:id="@+id/gambar_kanan"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:visibility="gone"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:id="@+id/img_kanan"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>